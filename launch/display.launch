<launch>
  <!-- Load robot description -->
  <param name="robot_description" command="$(find xacro)/xacro $(find my_robot_description)/urdf/my_robot.xacro" />

  <!-- Robot State Publisher -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

  <!-- Joint State Publisher GUI (لتجربة حركة المفاصل) -->
  <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" />

  <!-- Launch RViz -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find my_robot_description)/urdf/my_robot.rviz" required="true"/>
</launch>

